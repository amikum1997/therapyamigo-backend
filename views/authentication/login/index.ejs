<script>
    document.title = "TherapyAmigo | Login"
</script>

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="<%= process.env.BASEURL %>" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">
                                <img src="<%- process.env.BASEURL %>img/brandLogo.svg" alt="">
                            </span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    <h4 class="mb-2">Welcome to TherapyAmigo! ðŸ‘‹</h4>
                    <p class="mb-4">Please sign-in to your account and start the therapy</p>

                    <form id="formAuthentication" class="mb-3" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" name="email" onkeydown="validateMail()"
                                placeholder="Enter your email" autofocus />
                            <p class="errorMsg" id="invalidEmail">Invalid Email Address</p>
                        </div>
                        <div class="mb-3 form-password-toggle">
                            <div class="d-flex justify-content-between">
                                <label class="form-label" for="password">Password</label>
                                <a href="<%- process.env.BASEURL %>forgot-password">
                                    <small>Forgot Password?</small>
                                </a>
                            </div>
                            <div class="input-group input-group-merge">
                                <input type="password" id="password" class="form-control" name="password"
                                    placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                    aria-describedby="password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember-me" />
                                <label class="form-check-label" for="remember-me"> Remember Me </label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-primary d-grid w-100" type="submit">Sign in</button>
                        </div>
                    </form>

                    <p class="text-center">
                        <span>New on our platform?</span>
                        <a href="<%- process.env.BASEURL %>register">
                            <span>Create an account</span>
                        </a>
                    </p>
                </div>
            </div>
            <!-- /Register -->
            <script>

                function validateMail() {
                    let email = $("#email").val()
                    console.log(email);
                    let regex = new RegExp('[a-z0-9]+@[a-z]+\.[a-z]{2,3}');
                    if (regex.test(email)) {
                        $('#invalidEmail').css('display', 'none');
                    } else {
                        $('#invalidEmail').css('display', "block")
                    }
                };

                $('#formAuthentication').submit(function (e) {
                    e.preventDefault();
                })
            </script>
        </div>
    </div>
</div>